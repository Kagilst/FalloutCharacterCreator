                                    </Style>
                                </Button.Resources>
                            </Button>
                            <Button Content="&lt;" Click="DecreaseAgility" HorizontalAlignment="Center" Grid.Column="0" BorderBrush="Black" Margin="3" Height="32.5">
                                <Button.Resources>
                                    <Style TargetType="Border">
